  font-size: inherit !important;
  color: #ccc !important;
  line-height: 1.6em !important;
  font-weight: 400 !important;
  -webkit-font-smoothing: antialiased;
}

.petition-container {
  padding-left: 10%;
  padding-right: 20%;
}

.petition-container label {
  display: block;

<div class="container" style="padding: 10%;">
  <script src="https://wchat.freshchat.com/js/widget.js"></script>
  <script>
    window.fcWidget.init({
      token: "b29b8065-c796-4c51-9aff-31bedd1b603f",
      host: "https://wchat.freshchat.com"
    });
  </script>

  <fieldset>
    <legend> Claim your login to the Justice Dialer </legend>
    <%= form_tag("/login", method: :post) %>
        <input type="hidden" name="_csrf_token" value="<%= csrf_token() %>" />

        <div class="input-field">
          <label>Name</label>
          <input class="text" type="text" name="name" required="required"/>
        </div>

        <div class="input-field">
          <label>Email</label>
          <input class="text" type="email" name="email" required="required"/>
        </div>

        <div class="input-field">
          <label>Phone</label>
          <input class="text" type="tel" name="phone" maxlength="10" required="required" />
        </div>
        <br/>

        <!--
        <div class="input-field">
          <label>Are you with a Justice Democrats local chapter?</label>
          <select name="client">
            <option value="jd" selected="selected"> None </option>
            <%= for group <- @groups do %>
              <option value="<%= group["client"] %>"> <%= group["display_name"] %> </option>
            <% end %>
          </select>
        </div>
        <br/>
        -->

        <div class="input-field">
          <label>Where are you calling from?</label>
          <select name="calling_from">
            <option value="home"> Home </option>
            <option value="vol-pb"> Volunteer-hosted phone bank </option>
            <option value="campaign-office"> Campaign office </option>
            <option value="campaign-pb"> Campaign-hosted phone bank </option>
          </select>
        </div>
        <br/>

        <div class="input-field">
          <label> We'll need to verify your phone in order to get you in the dialer. Should we text you, or call you? </label>
          <br/>
          <label> <input name="verification_method" type="radio" value="text" required="true" /> Text me, I'm using a cell phone </label>
          <br/>
          <label> <input name="verification_method" type="radio" value="call" /> Call me, I'm using a landline </label>
        </div>
        <div class="input-field">
          <input class="button" type="submit" value="Get Your Login">
        </div>
    </form>
  </div>
</div>

<style>
.two-column {
  width: 100%;
  height: 100%;
  min-height: 80vh;
  padding-top: 30px;
  padding-bottom: 30px;
}

.right-column {
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  padding: 20px;
  background-color: rgba(30,30,30,0.8);
}

.right-column h1, .right-column h2 {
  color: #fff !important;
}

.right-column h3 {
  color: #FF7A65 !important;
}


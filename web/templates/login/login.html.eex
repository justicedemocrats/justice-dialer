}

.petition-container input[type="submit"] {
  cursor: pointer;
  font-size: 1.1em;
  font-weight: bold;
  height: 3.4em;
  letter-spacing: 1px;
  border: 0;
  transition: all .2s ease-out;
  text-transform: uppercase;
